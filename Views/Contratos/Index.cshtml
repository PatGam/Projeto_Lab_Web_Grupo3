@model IEnumerable<Projeto_Lab_Web_Grupo3.Models.Contratos>

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Index";
}



<!-- container section start -->
<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            <h1>Contratos</h1>
                        </header>
                        <div class="card border-info mb-4">
                            <div class="card-body">


                            </div>
                        </div>
                        <p>
                            <a asp-action="Create">Criar novo contrato</a>
                        </p>
                        <table class="table table-striped table-advance table-hover">

                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DataInicio)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PrecoFinal)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DataFim)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PrecoPacote)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PromocaoDesc)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NomeCliente)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NomeFuncionario)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Telefone)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Cliente)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Funcionario)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PromocoesPacotesNavigation)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DataInicio)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PrecoFinal)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DataFim)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PrecoPacote)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PromocaoDesc)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NomeCliente)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NomeFuncionario)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Telefone)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Cliente.CodigoPostal)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Funcionario.CodigoPostal)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PromocoesPacotesNavigation.NomePacote)
                                        </td>
                                        <td>
                                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.ContratoId"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                            <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.ContratoId"><i class="fa fa-info-circle" aria-hidden="true"></i></a>
                                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ContratoId"><i class="icon_close_alt2"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
        </section>
    </section>
</section>
