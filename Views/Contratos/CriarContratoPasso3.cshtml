@model NovoContratoPasso3ViewModel


@if (User.IsInRole("Cliente"))
{
    Layout = "_LayoutPData";

    <container>
        <div class="container bg-white mt-5 mb-5 ">
            <div class="row offset-3">
                <div class="row">
                    <div class="col-lg-12">
                        <section class="panel">  
                            <header class="panel-heading">
                                Associar novo pacote
                            </header>
                            <div class="panel-body">
                                <form asp-action="Create3" class="form-horizontal">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <input type="hidden" asp-for="ClienteId" value="@ViewBag.ClienteId">
                                    <input type="hidden" asp-for="Morada" value="@ViewBag.Morada" />
                                    <input type="hidden" asp-for="CodigoPostal" value="@ViewBag.CodigoPostal" />
                                    <input type="hidden" asp-for="Telefone" value="@ViewBag.Telefone" />
                                    <input type="hidden" asp-for="DistritosId" value="@ViewBag.DistritosId" />

                                    <div class="form-group">
                                        <label asp-for="PacoteId" class="col-sm-2 control-label"></label>
                                        <div class="col-sm-10">
                                            <select asp-for="PacoteId" class="form-control" asp-items="ViewBag.PacoteId"></select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="DataInicio" class="col-sm-2 control-label"></label>
                                        <div class="col-sm-10">
                                            <input asp-for="DataInicio" class="form-control" value="@DateTime.Now" />
                                            <span asp-validation-for="DataInicio" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-lg-2" for="inputSuccess">Período de fidelização</label>
                                        <div class="col-lg-10">
                                            <label class="radio">
                                                <input asp-for="UmAno" name="optionsRadios" type="radio" id="optionsRadios1" value="radio1" checked> Um ano
                                            </label>
                                            <label class="radio">
                                                <input asp-for="DoisAnos" name="optionsRadios" type="radio" id="optionRadios2" value="radio2"> Dois Anos
                                            </label>

                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-lg-offset-2 col-lg-10">
                                            <a class="btn btn-danger" asp-action="SeleccionarCliente">Cancelar</a>
                                            <input type="submit" class="btn btn-success" value="Seguinte" />
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </section>
                    </div>
                </div>
                </div>
            </div>
        </container>
}
else
{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Criar";

                @*Aqui seleciona o pacote, a data de início e a data de fim;*@

                <section id="main-content">
                    <section class="wrapper">
                        <div class="row">
                            <div class="col-lg-12">
                                <h3 class="page-header"><i class="fa fa-file-text-o"></i>Contratos</h3>
                                <ol class="breadcrumb">
                                    <li><i class="fa fa-home"></i><a href="index.html">Home</a></li>
                                    <li><i class="icon_document_alt"></i>Contratos</li>
                                    <li><i class="fa fa-file-text-o"></i>Criar</li>
                                </ol>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <section class="panel">
                                    <header class="panel-heading">
                                        Criar novo contrato
                                    </header>
                                    <div class="panel-body">
                                        <form asp-action="CriarContratoPasso3Validacao" class="form-horizontal">
                                            <div asp-validation-summary="All" class="text-danger"></div>

                                            <input type="hidden" asp-for="ClienteId" value="@ViewBag.ClienteId">
                                            <input type="hidden" asp-for="Morada" value="@ViewBag.Morada" />
                                            <input type="hidden" asp-for="CodigoPostal" value="@ViewBag.CodigoPostal" />
                                            <input type="hidden" asp-for="Telefone" value="@ViewBag.Telefone" />
                                            <input type="hidden" asp-for="DistritosId" value="@ViewBag.DistritosId" />


                                            <div class="form-group">
                                                <label asp-for="PacoteId" class="col-sm-2 control-label"></label>
                                                <div class="col-sm-10">
                                                    <select asp-for="PacoteId" class="form-control" asp-items="ViewBag.PacoteId"></select>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="DataInicio" class="col-sm-2 control-label"></label>
                                                <div class="col-sm-10">
                                                    <input asp-for="DataInicio" class="form-control" value="@DateTime.Now" />
                                                    <span asp-validation-for="DataInicio" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-lg-2" for="inputSuccess">Período de fidelização</label>
                                                <div class="col-lg-10">
                                                    <label class="checkbox-inline">
                                                        <input asp-for="UmAno" type="checkbox" id="inlineCheckbox1" { onclick = "SingleCheckbox(this)" }> Um ano
                                                    </label>
                                                    <label class="radio">
                                                        <input asp-for="DoisAnos" type="checkbox" id="inlineCheckbox2" { onclick = "SingleCheckbox(this)" }> Dois Anos
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-lg-offset-2 col-lg-10">
                                                    <a class="btn btn-danger" asp-action="SeleccionarCliente">Cancelar</a>
                                                    <input type="submit" class="btn btn-success" value="Seguinte" />
                                                </div>
                                            </div>
                                        </form>
                                    </div>

                                </section>
                            </div>
                        </div>
                    </section>
                </section>
}

<script>
    var SingleCheckbox = function (rb) {
    var id = rb.id, uncheck;
    if (id == 'inlineCheckbox1') {
        uncheck = document.getElementById('inlineCheckbox2');
    } else {
        uncheck = document.getElementById('inlineCheckbox1');
    }

    uncheck.checked = false;
}
</script>
                @section Scripts {
                    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                }
