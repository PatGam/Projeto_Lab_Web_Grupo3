@model Projeto_Lab_Web_Grupo3.Models.Contratos

@{
    ViewData["Title"] = "Editar";
    Layout = "_LayoutAdmin";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1>Editar contrato</h1>
                    <hr />
                    <div class="row">
                        <div class="col-md-4">
                            <form asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    Nome do Cliente
                                    <select asp-for="UtilizadorId" class="form-control" asp-items="ViewBag.UtilizadorId"></select>
                                </div>
                                <div class="form-group">
                                    Contacto de telefone fixo
                                    <input asp-for="Telefone" class="form-control" />
                                    <span asp-validation-for="Telefone" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    Pacote
                                    <select asp-for="PacoteId" class="form-control" asp-items="ViewBag.PacoteId"></select>

                                </div>
                                <div class="form-group">
                                    Promoção
                                    <select asp-for="PromocoesPacotesId" class="form-control" asp-items="ViewBag.PromocoesPacotesId"></select>
                                </div>
                                <div class="form-group">
                                    Data de início do contrato
                                    <input asp-for="DataInicio" class="form-control" />
                                    <span asp-validation-for="DataInicio" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    Data de fim do contrato
                                    <input asp-for="DataFim" class="form-control" />
                                    <span asp-validation-for="DataFim" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Guardar" class="btn btn-success" />
                                    <a asp-action="Index" class="btn btn-info" >Voltar Atrás</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </section>
    </section>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
