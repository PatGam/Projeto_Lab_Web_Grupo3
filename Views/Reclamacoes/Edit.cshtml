@model Projeto_Lab_Web_Grupo3.Models.Reclamacoes

@{
    ViewData["Title"] = "Edit";
    Layout = "_LayoutAdmin";
}

<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header">Reclamações</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">

                    <div class="panel-body">
                        <form asp-action="Edit" class="form-horizontal">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="ReclamacaoId" />
                            <div class="form-group">
                                @if (User.IsInRole("Operador"))
                                {
                                    <div class="form-group">
                                        <label asp-for="Resposta" class="col-sm-2 control-label"></label>
                                        <div class="col-sm-10">
                                            <input asp-for="Resposta" class="form-control" />
                                            <span asp-validation-for="Resposta" class="text-danger"></span>
                                        </div>

                                    </div>
                                    <div class="form-group">
                                        <label asp-for="DataResposta" class="col-sm-2 control-label"></label>
                                        <div class="col-sm-10">
                                            <input asp-for="DataResposta" class="form-control" />
                                            <span asp-validation-for="DataResposta" class="text-danger"></span>
                                        </div>

                                    </div>


                                    <div class="form-group">
                                        <label asp-for="FuncionarioId" class="col-sm-2 control-label"></label>
                                        <div class="col-sm-10">

                                            <select asp-for="FuncionarioId" class="form-control" asp-items="ViewBag.FuncionarioId"></select>
                                            <span asp-validation-for="FuncionarioId" class="text-danger"></span>
                                        </div>

                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ClienteId" class="col-sm-2 control-label"></label>
                                        <div class="col-sm-10">
                                            <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
                                            <span asp-validation-for="ClienteId" class="text-danger"></span>

                                        </div>

                                    </div>
                                    <div class="form-group">
                                        <div class="col-lg-offset-2 col-lg-10">
                                            <input type="submit" value="Guardar" class="btn btn-success" />
                                            <a class="btn btn-danger" asp-action="Index">Cancelar</a>
                                        </div>

                                    </div>

                                }
                            </div>
                                @*<label asp-for="Descricao" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="Descricao" class="form-control" />
                                    <span asp-validation-for="Descricao" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="form-group">
                                <label asp-for="DataReclamacao" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">

                                    <input asp-for="DataReclamacao" class="form-control" />
                                    <span asp-validation-for="DataReclamacao" class="text-danger"></span>
                                </div>

                            </div>


                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="EstadoResposta" /> @Html.DisplayNameFor(model => model.EstadoResposta)
                                </label>
                            </div>
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="EstadoResolução" /> @Html.DisplayNameFor(model => model.EstadoResolução)
                                </label>
                            </div>
                            <div class="form-group">
                                <label asp-for="DataResolucao" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="DataResolucao" class="form-control" />
                                    <span asp-validation-for="DataResolucao" class="text-danger"></span>
                                </div>

                            </div>
 
                            <div class="form-group">
                                <label asp-for="FuncionarioId" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">

                                    <select asp-for="FuncionarioId" class="form-control" asp-items="ViewBag.FuncionarioId"></select>
                                    <span asp-validation-for="FuncionarioId" class="text-danger"></span>
                                </div>

                            </div>*@

                        </form>
                    </div>
                </section>
            </div>
        </div>
    </section>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
