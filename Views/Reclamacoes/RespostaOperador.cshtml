@model ReclamacoesViewModel

@{
    ViewData["Title"] = "RespostaOperador";
    Layout = "_LayoutAdmin";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            <h1>Reclamações</h1>
                        </header>
                        <div class="card border-info mb-4">
                            <div class="card-body">


                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <form asp-action="RespostaOperador">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" asp-for="ReclamacaoId" />
                                    <input type="hidden" asp-for="ContratoId" />

                                    <div class="form-group">
                                        <label asp-for="Resposta" class="control-label"></label>
                                        <input asp-for="Resposta" class="form-control" />
                                        <span asp-validation-for="Resposta" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="EstadoResposta" class="control-label" >Respondido?</label>
                                        <select name="EstadoResposta">

                                            <option value="true">Sim</option>
                                            <option value="false">Não</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="EstadoResolução" class="control-label" >Resolvido?</label>
                                        <select name="EstadoResolução">
                                            <option value="true">Sim</option>
                                            <option value="false">Não</option>

                                        </select>
                                    </div>

                                    <div class="form-group">

                                        
                                        <input type="hidden" asp-for="ClienteId" />
                                        <span asp-validation-for="ClienteId" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <input type="submit" class="btn btn-primary" value="Enviar Resposta" />
                                        <a asp-action="Index">Voltar Atrás</a>
                                    </div>
                                </form>
                            </div>
                        </div>




                    </section>
                </div>
            </div>
        </section>
    </section>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}