@model Projeto_Lab_Web_Grupo3.Models.Reclamacoes

@{
    ViewData["Title"] = "Delete";
    Layout = "_LayoutPData";
}

<container>
    <div class="container bg-white mt-5">
        <div class="row offset-2">
            <div class="col-lg-12">
                <div class="p-3 m-t-25 py-5">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="text-right">Arquivar Reclamação</h4>
                    </div>
                    <div class="row">
                        <div class="col-lg-10">
                            <section class="panel">
                                <table class="table table-bordered">
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Descricao)
                                        </th>
                                        <td>
                                            @Html.DisplayFor(model => model.Descricao)
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.DataReclamacao)
                                        </th>
                                        <td>
                                            @Html.DisplayFor(model => model.DataReclamacao)
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Resposta)
                                        </th>
                                        <td>
                                            @Html.DisplayFor(model => model.Resposta)
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.DataResposta)
                                        </th>
                                        <td>
                                            @Html.DisplayFor(model => model.DataResposta)
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.EstadoResposta)
                                        </th>

                                        @if (Model.EstadoResposta == true)
                                        {
                                            <td class="col-lg-7">
                                                Sim
                                            </td>
                                        }
                                        else
                                        {
                                            <td class="col-lg-7">
                                                Não
                                            </td>
                                        }



                                    </tr>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.EstadoResolução)
                                        </th>
                                        @if (Model.EstadoResolução == true)
                                        {
                                            <td class="col-lg-7">
                                                Sim
                                            </td>
                                        }
                                        else
                                        {
                                            <td class="col-lg-7">
                                                Não
                                            </td>
                                        }
                                    </tr>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.DataResolucao)
                                        </th>
                                        <td>
                                            @Html.DisplayFor(model => model.DataResolucao)
                                        </td>
                                    </tr>



                                </table>
                                <div class="row">                                    
                                <form asp-action="Delete">
                                    <input type="hidden" asp-for="ReclamacaoId" />
                                    <input type="submit" value="Marcar Como Resolvida" class="button-form-btn2 col-lg-4" />
                                    <a asp-area="" asp-controller="Reclamacoes" asp-action="Create" class="button-form-btn2 col-lg-4">Enviar nova reclamação</a>
                                    <a asp-action="ViewCliente" class="button-form-btn4 col-lg-4 offset-1">Cancelar</a>
                                </form>
                                        </div>                                    
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>    
</container>
