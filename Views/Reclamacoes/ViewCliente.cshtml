@model ReclamacoesViewModel

@{
    ViewData["Title"] = "ViewCliente";
    Layout = "_LayoutPData";
}

<container>
    <div class="container bg-white mt-5 mb-5 ">
        <div class="row offset-3">
            <div class="col-lg-10">
                <div class="p-3 m-t-25 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Minhas Reclamações</h4>
                    </div>
                    @if (Model.Reclamacoes.Count == 0)
                    {
                        <table class="table table-striped table-advance table-hover">
                            <tr>
                                <td>Não existem reclamações a mostrar.</td>
                            </tr>
                        </table>
                    }
                    else
                    {
                        <table class="table table-striped table-advance table-hover">
                            <thead>

                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Resposta)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DataResposta)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Inactivo)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.DataResolucao)
                                    </th>

                                </tr>



                            <thead />



                            @foreach (var item in Model.Reclamacoes)
                            {
                                <tbody>
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Resposta)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DataResposta)
                                        </td>


                                        @if (item.Inactivo == true)
                                        {
                                            <td class="text-center">
                                                Sim
                                            </td>
                                        }
                                        else
                                        {
                                            <td class="text-center">
                                                Não
                                            </td>
                                        }

                                        <td>
                                            @Html.DisplayFor(modelItem => item.DataResolucao)
                                        </td>

                                        <td><a class="button-form-btn3" asp-action="Delete" asp-route-id="@item.ReclamacaoId">Ver Detalhes</a> </td>

                                    </tr>

                                </tbody>
                            }
                        </table>
                    }

                </div>
            </div>
        </div>
    </div>
    <div class="whtspace"/>
</container>
