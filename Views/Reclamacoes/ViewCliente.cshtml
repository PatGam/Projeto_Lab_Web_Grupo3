@model ReclamacoesViewModel

@{
    ViewData["Title"] = "ViewCliente";
    Layout = "_LayoutPData";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            <h1>Minhas Reclamações</h1>
                        </header>
                        <div class="card border-info mb-4">
                            <div class="card-body">


                            </div>
                        </div>
                        <table class="table table-striped table-advance table-hover">
                            <thead>

                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Resposta)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DataResposta)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Inactivo)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.DataResolucao)
                                    </th>

                                </tr>



                            <thead />



                            @foreach (var item in Model.Reclamacoes)
                            {
                                <tbody>
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Resposta)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DataResposta)
                                        </td>


                                        @if (item.Inactivo == true)
                                        {
                                            <td class="text-center">
                                                Sim
                                            </td>
                                        }
                                        else
                                        {
                                            <td class="text-center">
                                                Não
                                            </td>
                                         }
}
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DataResolucao)
                                        </td>
                                        <td><a asp-action="Delete" asp-route-id="@item.ReclamacaoId">Marcar Como Resolvida</a> </td>

                                    </tr>

                                </tbody>
                            }
                        </table>

                    </section>
                </div>
            </div>
        </section>
    </section>
</section>