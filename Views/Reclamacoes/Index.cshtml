@model IEnumerable<Projeto_Lab_Web_Grupo3.Models.Reclamacoes>

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutAdmin";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            <h1>Reclamações</h1>
                        </header>
                        <div class="card border-info mb-4">
                            <div class="card-body">


                            </div>
                        </div>


                        <table class="table table-striped table-advance table-hover">
                            <thead>
                                <tr>
                                    @if (User.IsInRole("Operador"))
                                    {

                                        <th>
                                            @Html.DisplayNameFor(model => model.Descricao)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.DataReclamacao)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Cliente)
                                        </th>

                                    }
                                    @if (User.IsInRole("Cliente"))
                                    {
                                        <th>
                                            @Html.DisplayNameFor(model => model.Resposta)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.DataResposta)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.EstadoResposta)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.EstadoResolução)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.DataResolucao)
                                        </th>

                                        <th>
                                            @Html.DisplayNameFor(model => model.Funcionario)
                                        </th>
                                    }

                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        @if (User.IsInRole("Operador"))
                                        {
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Descricao)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DataReclamacao)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Cliente.Nome)
                                            </td>
                                        }
                                        @if (User.IsInRole("Cliente"))
                                        {
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Resposta)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DataResposta)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.EstadoResposta)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.EstadoResolução)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DataResolucao)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.Funcionario.Nome)
                                            </td>
                                        }


                                    <td>


                                        <a asp-action="Details" asp-route-id="@item.ReclamacaoId">Detalhes</a> |
                                        <a asp-action="Delete" asp-route-id="@item.ReclamacaoId">Arquivar</a> |
                                        <a asp-action="Edit" asp-route-id="@item.ReclamacaoId">Responder ao Cliente</a> 

                                    </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </section>
                </div>
            </div>
        </section>
    </section>
</section>