@model IEnumerable<Projeto_Lab_Web_Grupo3.Models.Reclamacoes>

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutAdmin";
}

<section id="main-content">
    <section class="wrapper">
        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <div class="container row p-0 m-0">
            <div class="col-lg-12">
                <h3 class="page-header"><i class="fa fa-inbox" aria-hidden="true"></i>Reclamações</h3>
                <ol class="breadcrumb">
                    <li><i class="fa fa-home"></i><a href="index.html">Home</a></li>


                </ol>
            </div>
            <div class="col-3 offset-3">
            </div>
            <div class="col-12 border p-3">
                <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            @if (User.IsInRole("Operador"))
                            {
                                <th>Descrição</th>
                                <th>Data Reclamação</th>
                                <th>Cliente</th>
                                @*<th>Resposta</th>*@
                            }
                            @if (User.IsInRole("Cliente"))
                            {
                                <th>Data Resposta</th>
                                <th>Estado Resposta</th>
                                <th>Estado Resolução</th>
                                <th>Data Resolução</th>
                                <th>Funcionário</th>
                            }


                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </section>
</section>

@section Scripts{
    <script src="~/js/Reclamacoes.js"></script>
}