@model IEnumerable<Projeto_Lab_Web_Grupo3.Models.PacotesNoContrato>


@if (User.IsInRole("Cliente"))
{
    Layout = "_LayoutPData";
    ViewData["Title"] = "Index";

    <container>
        <div class="container bg-white mt-5">
            <div class="row offset-2">
                <div class="col-lg-12">
                    <div class="p-3 m-t-25 py-5 ">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="text-right">Os meus contratos</h4>
                        </div>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Contratos)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Pacotes)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DataInicio)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Morada)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CodigoPostal)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Distritos)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Contratos.CodigoPostal)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Pacotes.Nome)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DataInicio)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Morada)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CodigoPostal)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Distritos.Nome)
                                        </td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@item.PacotesNoContratoId"><i class="fas fa-info-circle iconbg1"></i></a>
                                            <a asp-action="Delete" asp-route-id="@item.PacotesNoContratoId"><i class="fas fa-backspace iconbg1"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="offset-9">
                            <a class="button-form-btn m-t-8 m-b-15" asp-area="" asp-controller="PacotesNoContrato" asp-action="Create">Associar Novo Pacote</a>
                        </div>
                    </div>
                    </div>
                </div>
            </div>
        <div class="whtspace"/>
        </container>
        
     }
