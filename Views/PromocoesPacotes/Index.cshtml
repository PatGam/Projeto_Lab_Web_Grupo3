@model IEnumerable<Projeto_Lab_Web_Grupo3.Models.PromocoesPacotes>

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutAdmin";
}



<p>
    <a asp-action="Create">Criar Nova</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomePacote)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomePromocoes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pacote)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Promocoes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomePacote)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomePromocoes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pacote.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Promocoes.Nome)
            </td>
            <td>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.PromocoesPacotesId"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>|
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.PromocoesPacotesId"><i class="fa fa-info-circle" aria-hidden="true"></i></a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.PromocoesPacotesId"><i class="icon_close_alt2"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
