@model IEnumerable<Projeto_Lab_Web_Grupo3.Models.ServicosPacotes>

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutAdmin";
}


<body>
    <!-- container section start -->
    <section id="container" class="">
        <section id="main-content">
            <section class="wrapper">
                <div class="row">
                    <div class="col-lg-12">
                        <section class="panel">
                            <header class="panel-heading">

                            </header>


                            <p>
                                <a asp-action="Create">Criar nova</a>
                            </p>
                            <table class="table table-striped table-advance table-hover">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Pacote)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Servico)
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Pacote.Nome)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Servico.Nome)
                                            </td>
                                            <td>
                                                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.SevicoPacoteId"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.SevicoPacoteId"><i class="fa fa-info-circle" aria-hidden="true"></i></a>
                                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.SevicoPacoteId"><i class="icon_close_alt2"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            </section>
                        </div>
                    </div>
                </section>
            </section>
        </section>
    </body>

