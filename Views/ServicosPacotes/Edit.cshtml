@model Projeto_Lab_Web_Grupo3.Models.ServicosPacotes

@{
    ViewData["Title"] = "Editar";
    Layout = "_LayoutAdmin";
}
<body>
    <!-- container section start -->
    <section id="container" class="">
        <section id="main-content">
            <section class="wrapper">
                <div class="row">
                    <div class="col-lg-12">
                        <section class="panel">
                            <header class="panel-heading">
                                <h1>Editar</h1>
                            </header>


                            <hr />
                            <div class="row">
                                <div class="col-md-4">
                                    <form asp-action="Edit">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group">
                                            <label asp-for="ServicoId" class="control-label"></label>
                                            <select asp-for="ServicoId" class="form-control" asp-items="ViewBag.ServicoId"></select>
                                            <span asp-validation-for="ServicoId" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="PacoteId" class="control-label"></label>
                                            <select asp-for="PacoteId" class="form-control" asp-items="ViewBag.PacoteId"></select>
                                            <span asp-validation-for="PacoteId" class="text-danger"></span>
                                        </div>
                                        <input type="hidden" asp-for="SevicoPacoteId" />
                                        <div class="form-group">
                                            <input type="submit" value="Guardar" class="btn btn-primary" />
                                        </div>
                                    </form>
                                </div>
                            </div>

                            <div>
                                <a asp-action="Index">Voltar Atrás</a>
                            </div>

                            @section Scripts {
                                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                            }
                        </section>
                    </div>
                </div>
            </section>
        </section>
    </section>
</body>
