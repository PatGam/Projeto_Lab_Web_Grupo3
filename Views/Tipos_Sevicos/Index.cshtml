@model IEnumerable<Projeto_Lab_Web_Grupo3.Models.Tipos_Sevicos>

@{
    ViewData["Title"] = "Index";
}

<body>
    <!-- container section start -->
    <section id="container" class="">
        <section id="main-content">
            <section class="wrapper">
                <div class="row">
                    <div class="col-lg-12">
                        <section class="panel">
                            <header class="panel-heading">
                                <h1>Tipo de Serviço</h1>
                            </header>

                            <p>
                                <a asp-action="Create">Create New</a>
                            </p>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Nome)
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Nome)
                                            </td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@item.TipoServicoId">Edit</a> |
                                                <a asp-action="Details" asp-route-id="@item.TipoServicoId">Details</a> |
                                                <a asp-action="Delete" asp-route-id="@item.TipoServicoId">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </section>
                    </div>
                </div>
            </section>
        </section>
    </section>
</body>