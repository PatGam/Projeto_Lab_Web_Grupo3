@model IEnumerable<Projeto_Lab_Web_Grupo3.Models.Tipos_Clientes>

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutAdmin";
}
<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            <h1>Promoções</h1>
                        </header>
                        <div class="card border-info mb-4">
                            <div class="card-body">


                            </div>
                        </div>

                        <p>
                            <a asp-action="Create">Criar novo</a>
                        </p>
                        <table class="table table-striped table-advance table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Nome)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nome)
                                        </td>
                                        <td>
                                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.TipoClienteId"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                            <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.TipoClienteId"><i class="fa fa-info-circle" aria-hidden="true"></i></a> |
                                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.TipoClienteId"><i class="icon_close_alt2"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
        </section>
    </section>
</section>