@model Projeto_Lab_Web_Grupo3.Models.Servicos

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Create";
}



<body>
    <!-- container section start -->
    <section id="container" class="">
        <section id="main-content">
            <section class="wrapper">
                <div class="row">
                    <div class="col-lg-12">
                        <section class="panel">
                            <header class="panel-heading">
                                <h1>Criar</h1>
                            </header>

                            <h4>Serviços</h4>
                            <hr />
                            <form asp-action="Create">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="ServicoId" class="control-label"></label>
                                    <input asp-for="ServicoId" class="form-control" />
                                    <span asp-validation-for="ServicoId" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Nome" class="control-label"></label>
                                    <input asp-for="Nome" class="form-control" />
                                    <span asp-validation-for="Nome" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Descricao" class="control-label"></label>
                                    <input asp-for="Descricao" class="form-control" />
                                    <span asp-validation-for="Descricao" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="TipoServicoId" class="control-label"></label>
                                    <select asp-for="TipoServicoId" class="form-control" asp-items="ViewBag.TipoServicoId"></select>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Criar" class="btn btn-primary" />
                                </div>
                            </form>
                            <div>
                                <a asp-action="Index">Voltar atrás</a>
                            </div>

                            @section Scripts {
                                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                            }
                        </section>
                    </div>
                </div>
            </section>
        </section>
    </section>
</body>
