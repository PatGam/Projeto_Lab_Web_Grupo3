<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Projeto_Lab_Web_Grupo3</title>

    <!--Template-->
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
    <!-- Template Main CSS File -->
    <link rel="stylesheet" href="~/TemplMain/assets/css/style.css" />

    <!-- Vendor CSS Files -->
    <link href="~/TemplMain/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/TemplMain/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/TemplMain/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/TemplMain/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/TemplMain/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/TemplMain/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
</head>

<body>
    <div class="wrap">
        <!-- ======= Hero Section ======= -->
         <section id="hero">
                <div class="hero-container" data-aos="fade-up">
                    <h1>Teste</h1>
                    <h2>Botao Login em baixo por fazer conexão</h2>
                    <a href="#about" class="btn-get-started scrollto">Login</a>
                </div>
          </section>        
        <!-- End Hero -->

        <header id="header" class="d-flex align-items-center">
            <div class="container d-flex align-items-center justify-content-between">
                <nav id="navbar" class="navbar">
                    <div class="logo">
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Projeto_Lab_Web_Grupo3</a>
                        <!--<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>-->

                    </div>
                    <nav id="navbar" class="navbar">
                        <partial name="_LoginPartial" />
                        <ul>
                            <li class="nav-item">
                                <a class="nav-link scrollto active" asp-area="" asp-controller="Home" asp-action="Index">Index</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link scrollto active" asp-area="" asp-controller="Clientes" asp-action="Index">Gerir Clientes</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link scrollto active" asp-area="" asp-controller="Funcionarios" asp-action="Index">Gerir Funcionários</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link scrollto active" asp-area="" asp-controller="Pacotes" asp-action="Index">Gerir Pacotes</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link scrollto active" asp-area="" asp-controller="Servicos" asp-action="Index">Gerir Serviços</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link scrollto active" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        </ul>
                        <i class="bi bi-list mobile-nav-toggle"></i><!--Vista Telemovel-->
                    </nav>
                </nav>
            </div>
        </header>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!--Footer-->
    <footer id="footer">
        <div class="footer-top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-6 footer-links">
                        <h4>Encontra-nos nas nossas redes sociais</h4>
                        <div class="social-links mt-3">
                            <a href="#" class="twitter"><i class="bx bxl-twitter"></i></a>
                            <a href="#" class="facebook"><i class="bx bxl-facebook"></i></a>
                            <a href="#" class="instagram"><i class="bx bxl-instagram"></i></a>
                            <a href="#" class="google-plus"><i class="bx bxl-skype"></i></a>
                            <a href="#" class="linkedin"><i class="bx bxl-linkedin"></i></a>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="container py-4">
            <div class="copyright">
                &copy; 2021 - Projeto_Lab_Web_Grupo3 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
            <div class="credits">
                <a>Designed by Grupo3 - Upskill</a>
            </div>
        </div>
    </footer>

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/TemplMain/assets/vendor/aos/aos.js"></script>
    <script src="~/TemplMain/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/TemplMain/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/TemplMain/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/TemplMain/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/TemplMain/assets/vendor/swiper/swiper-bundle.min.js"></script>

    <!-- Template Main JS File -->
    <script src="~/TemplMain/assets/js/main.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!--<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script> POR VERIFICAR-->

    @RenderSection("Scripts", required: false)
</body>
</html>

