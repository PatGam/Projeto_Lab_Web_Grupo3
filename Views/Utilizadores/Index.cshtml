@model IEnumerable<Projeto_Lab_Web_Grupo3.Models.Utilizadores>

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Index";
}


<body>
    <!-- container section start -->
    <section id="container" class="">
        <section id="main-content">
            <section class="wrapper">


                @if (ViewBag.TipoUtil != "Cliente")
                {
                    <div class="container row p-0 m-0">
                        <div class="col-3 offset-3">
                        </div>
                        <div class="col-12 border p-3">
                            <table id="DT_load_Utilizadores_Funcionarios" class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Nome</th>
                                        <th>NIF</th>
                                        <th>Data Nascimento</th>
                                        <th>Morada</th>
                                        <th>Telemovel</th>
                                        <th>Email</th>
                                        <th>Role</th>
                                        <th></th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                }

                @if (ViewBag.TipoUtil == "Cliente")
                {
                    <div class="container row p-0 m-0">
                        <div class="col-3 offset-3">
                        </div>
                        <div class="col-12 border p-3">
                            <table id="DT_load_Utilizadores_Clientes" class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Nome</th>
                                        <th>NIF</th>
                                        <th>Data Nascimento</th>
                                        <th>Morada</th>
                                        <th>Telemovel</th>
                                        <th>Email</th>
                                        <th>Role</th>
                                        <th></th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                }


            </section>
        </section>
    </section>
</body>
@section Scripts {
    <script src="~/js/UtilizadoresClientesList.js"></script>
    <script src="~/js/UtilizadoresFuncionariosList.js"></script>

}