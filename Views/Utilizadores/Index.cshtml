@model IEnumerable<Projeto_Lab_Web_Grupo3.Models.Utilizadores>

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Index";
}


<body>
    <!-- container section start -->
    <section id="container" class="">
        <section id="main-content">
            <section class="wrapper">


                                @*@if (ViewBag.TipoUtil == "Select")
                                {
                                    <h1>Clientes</h1>
                                    <p>Selecione o Cliente ao qual pretende associar o contrato.</p>
                                }*@
                                else
                                {
                                    <h1>Funcionários</h1>
                                }
                            </header>
                            <table class="table table-striped table-advance table-hover">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Nome)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Nif)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.DataNascimento)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Morada)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Telemovel)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Email)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CodigoPostal)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Role)
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (ViewBag.TipoUtil == "Cliente")
                                    {
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                @if (item.Role == "Cliente")
                                                {
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Nome)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Nif)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.DataNascimento)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Morada)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Telemovel)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Email)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.CodigoPostal)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Role)
                                                    </td>
                                                    <td>
                                                        <a asp-action="Edit" asp-route-id="@item.UtilizadorId">Edit</a> |
                                                        <a asp-action="Details" asp-route-id="@item.UtilizadorId">Details</a> |
                                                        <a asp-action="Delete" asp-route-id="@item.UtilizadorId">Delete</a>
                                                    </td>
                                                }
                                            </tr>
                                        }
                                    }
                                    @if (ViewBag.TipoUtil != "Cliente")
                                    {
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                @if (item.Role != "Cliente")
                                                {
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Nome)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Nif)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.DataNascimento)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Morada)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Telemovel)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Email)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.CodigoPostal)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Role)
                                                    </td>
                                                    <td>
                                                        <a asp-action="Edit" asp-route-id="@item.UtilizadorId">Edit</a> |
                                                        <a asp-action="Details" asp-route-id="@item.UtilizadorId">Details</a> |
                                                        <a asp-action="Delete" asp-route-id="@item.UtilizadorId">Delete</a>
                                                    </td>
                                                }
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </section>
                    </div>
                </div>


                @if (ViewBag.TipoUtil != "Cliente")
                {
                    <div class="container row p-0 m-0">
                        <div class="col-3 offset-3">
                        </div>
                        <div class="col-12 border p-3">
                            <table id="DT_load_Utilizadores_Funcionarios" class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Nome</th>
                                        <th>NIF</th>
                                        <th>Data Nascimento</th>
                                        <th>Morada</th>
                                        <th>Telemovel</th>
                                        <th>Email</th>
                                        <th>Role</th>
                                        <th></th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                }

                @if (ViewBag.TipoUtil == "Cliente")
                {
                    <div class="container row p-0 m-0">
                        <div class="col-3 offset-3">
                        </div>
                        <div class="col-12 border p-3">
                            <table id="DT_load_Utilizadores_Clientes" class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Nome</th>
                                        <th>NIF</th>
                                        <th>Data Nascimento</th>
                                        <th>Morada</th>
                                        <th>Telemovel</th>
                                        <th>Email</th>
                                        <th>Role</th>
                                        <th></th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                }


            </section>
        </section>
    </section>
</body>
@section Scripts {
    <script src="~/js/UtilizadoresClientesList.js"></script>
    <script src="~/js/UtilizadoresFuncionariosList.js"></script>

}