@model UtilizadoresViewModel
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Index";
}


<body>
    <!-- container section start -->
    <section id="container" class="">
        <section id="main-content">
            <section class="wrapper">
                <div class="row">
                    <div class="col-lg-12">
                        <h3 class="page-header"><i class="fa fa-file-text-o"></i>Funcionários</h3>
                        <ol class="breadcrumb">
                            <li><i class="fa fa-home"></i><a href="index.html">Home</a></li>
                            <li><i class="icon_document_alt"></i>Gerir Funcionários</li>
                            <li><i class="fa fa-file-text-o"></i>Consultar</li>
                        </ol>
                    </div>
                </div>

                <section class="panel">
                    <div class="panel-body">
                        Insira na barra de pesquisa o NIF do utilizador cujo utilizador pretende consultar
                        <br />
                        <form class="form-horizontal " asp-action="IndexFuncionarios" method="get">
                            <div class="form-group">
                                <div class="col-lg-10">
                                    <input name="nifPesquisa" type="search" value="@Model.nifPesquisa" class="form-control input-lg m-bot15" placeholder="Inserir NIF">
                                </div>
                                <div class="col-lg-10">
                                    <input type="submit" value="Pesquisar" class="btn btn-success btn-lg" />
                                    <a asp-action="IndexFuncionarios" class="btn btn-primary btn-lg">Limpar</a>
                                </div>
                            </div>

                        </form>
                    </div>
                </section>
                @if (Model.nifPesquisa != null)
                {
                    <div class="row">
                        <div class="col-lg-12">
                            <section class="panel">
                                <header class="panel-heading">
                                    Resultados
                                </header>
                                @if (Model.Utilizador.Count == 0)
                                {
                                    <div class="alert alert-block alert-danger fade in">
                                        <button data-dismiss="alert" class="close close-sm" type="button">
                                        </button>
                                        Não foi encontrado utilizador com o NIF @Model.nifPesquisa
                                    </div>

                                }
                                else
                                {
                                    <table class="table table-striped table-advance table-hover">
                                        <thead>
                                            <tr>
                                                <th>
                                                    Nome
                                                </th>
                                                <th>
                                                    Nif
                                                </th>
                                                <th>
                                                    Data Nascimento
                                                </th>
                                                <th>
                                                    Morada
                                                </th>
                                                <th>
                                                    Telemovel
                                                </th>
                                                <th>
                                                    Email
                                                </th>
                                                <th>
                                                    CodigoPostal
                                                </th>
                                                <th>
                                                    Role
                                                </th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @foreach (var item in Model.Utilizador)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Nome)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Nif)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.DataNascimento)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Morada)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Telemovel)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Email)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.CodigoPostal)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Role)
                                                    </td>
                                                    <td>
                                                        @*<a asp-action="Edit" asp-route-id="@item.UtilizadorId">Edit</a> |*@
                                                        <a asp-action="Details" asp-route-id="@item.UtilizadorId">Detalhes</a> |
                                                        <a asp-action="Delete" asp-route-id="@item.UtilizadorId">Arquivar</a> |
                                                        <a asp-area="" asp-controller="Contratos" asp-action="Create" asp-route-cliente=@item.UtilizadorId>Associar contrato</a> 
                                                    </td>

                                                </tr>
                                            }

                                        </tbody>
                                    </table>
                                }
                            </section>
                        </div>
                    </div>
                }

