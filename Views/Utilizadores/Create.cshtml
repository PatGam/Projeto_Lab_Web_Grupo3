@model RegistoUtilizadoresViewModel


@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Create";
}

<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                @*Varia o que é mostrado consoante o que passa no asp-route*@
                @if (ViewBag.TipoUtil == "Cliente")
                {
                    <h3 class="page-header"><i class="fas fa-users"></i>Clientes</h3>
                }

                else
                {
                    <h3 class="page-header"><i class="fas fa-users"></i>Funcionários</h3>
                }
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Criar novo utilizador
                    </header>
                    <div class="panel-body">
                        <form asp-action="Create" class="form-horizontal ">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <label asp-for="Nome" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="Nome" />
                                    <span asp-validation-for="Nome" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" asp-for="Nif"></label>
                                <div class="col-sm-10">
                                    <input asp-for="Nif" class="form-control" />
                                    <span asp-validation-for="Nif" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" asp-for="DataNascimento"></label>
                                <div class="col-sm-10">
                                    <input asp-for="DataNascimento" class="form-control" />
                                    <span asp-validation-for="DataNascimento" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" asp-for="Morada"></label>
                                <div class="col-sm-10">
                                    <input asp-for="Morada" class="form-control" />
                                    <span asp-validation-for="Morada" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" asp-for="Telemovel"></label>
                                <div class="col-sm-10">
                                    <input asp-for="Telemovel" class="form-control" />
                                    <span asp-validation-for="Telemovel" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" asp-for="Email"></label>
                                <div class="col-sm-10">
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" asp-for="CodigoPostal"></label>
                                <div class="col-sm-10">
                                    <input asp-for="CodigoPostal" class="form-control" />
                                    <span asp-validation-for="CodigoPostal" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-lg-2" for="Role">Role</label>
                                <div class="col-lg-10">
                                    <select class="form-control m-bot15" name="Role" id="RoleId">
                                        @if (ViewBag.TipoUtil != "Cliente")
                                        {
                                            <option value="Administrador">Administrador</option>
                                            <option value="Operador">Operador</option>
                                        }
                                        else
                                        {
                                            <option value="Cliente">Cliente</option>
                                        }

                                    </select>
                                    <br>
                                    <br>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" asp-for="Password"></label>
                                <div class="col-sm-10">
                                    <input asp-for="Password" class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <p>Minímo 8 caracteres;</p>
                                    <p>Pelo menos 1 letra maiúscula;</p>
                                    
                                    <p>Pelo menos 1 letra minúscula;</p>
                                    
                                    <p>Pelo menos 1 Número;</p>
                                   
                                    <p>1 caracter especial($,!, %, ?, &);</p>
                                    

                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" asp-for="ConfirmePassword"></label>
                                <div class="col-sm-10">
                                    <input asp-for="ConfirmePassword" class="form-control" />
                                    <span asp-validation-for="ConfirmePassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-offset-2 col-lg-10">
                                    <input type="submit" class="btn btn-success" value="Criar novo utilizador" />
                                    <a class="btn btn-danger" asp-action="Index">Volta à lista</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </section>
            </div>
        </div>
    </section>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
