@model UtilizadoresViewModel
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Index";
}


<body>
    <!-- container section start -->
    <section id="container" class="">
        <section id="main-content">
            <section class="wrapper">
                <div class="row">
                    <div class="col-lg-12">
                        <h3 class="page-header"><i class="fa fa-file-text-o"></i>Clientes</h3>
                        <ol class="breadcrumb">
                            <li><i class="fa fa-home"></i><a href="index.html">Home</a></li>
                            <li><i class="icon_document_alt"></i>Gerir Clientes</li>
                            <li><i class="fa fa-file-text-o"></i>Consultar</li>
                        </ol>
                    </div>
                </div>

                <section class="panel">
                    <div class="panel-body">
                        Insira na barra de pesquisa o distrito dos utilizadores cujo pretende consultar
                        <br />
                        <form class="form-horizontal " asp-action="IndexClientesDistritos" method="get">
                            <div class="form-group">
                                <div class="col-lg-10">
                                    <input name="distrito" type="search" value="@Model.distrito" class="form-control input-lg m-bot15" placeholder="Inserir distrito">
                                </div>
                                <div class="col-lg-10">
                                    <input type="submit" value="Pesquisar" class="btn btn-success btn-lg" />
                                    <a asp-action="IndexClientesDistritos" class="btn btn-primary btn-lg">Limpar</a>
                                </div>
                            </div>

                        </form>
                    </div>
                </section>
                @if (Model.distrito != null)
                {
                    <div class="row">
                        <div class="col-lg-12">
                            <section class="panel">
                                <header class="panel-heading">
                                    Resultados
                                </header>
                                @if (Model.Utilizador.Count == 0)
                                {
                                    <div class="alert alert-block alert-danger fade in">
                                        <button data-dismiss="alert" class="close close-sm" type="button">
                                        </button>
                                        Não foi encontrado utilizador no distrito de @Model.distrito
                                    </div>

                                }
                                else
                                {
                                    <table class="table table-striped table-advance table-hover">
                                        <thead>
                                            <tr>
                                                <th>
                                                    Nome
                                                </th>
                                                <th>
                                                    Nif
                                                </th>
                                                <th>
                                                    Telemovel
                                                </th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @foreach (var item in Model.Utilizador)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Nome)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Nif)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Telemovel)
                                                    </td>
                                                    <td>
                                                        @if (User.IsInRole("Administrador"))
                                                        {
                                                            <a asp-action="EditClientes" asp-route-id="@item.UtilizadorId">Editar |</a>
                                                        }
                                                        <a asp-action="Details" asp-route-id="@item.UtilizadorId">Detalhes |</a>
                                                        <a asp-action="DeleteClientes" asp-route-id="@item.UtilizadorId">Arquivar |</a>
                                                        @if (User.IsInRole("Operador"))
                                                        {
                                                            <a asp-area="" asp-controller="Contratos" asp-action="Create" asp-route-cliente=@item.UtilizadorId>Associar contrato</a>
                                                        }
                                                    </td>

                                                </tr>
                                            }

                                        </tbody>
                                    </table>
                                }
                            </section>
                        </div>
                    </div>
                }


            </section>
        </section>
    </section>
</body>
