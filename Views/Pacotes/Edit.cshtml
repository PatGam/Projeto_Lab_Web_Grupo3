@model ServicosPacotesViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header"><i class="icon_bag"></i>Pacotes</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Criar novo Pacote
                    </header>
                    <form asp-action="Edit" class="form-horizontal" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="PacoteId" />
                        <div class="form-group">
                            <label asp-for="Nome" class="col-sm-2 control-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Nome" class="form-control" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Descricao" class="col-sm-2 control-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Descricao" class="form-control" />
                                <span asp-validation-for="Descricao" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Imagem" class="col-sm-2 control-label">Imagem (opcional) </label>
                            <input name="Imagem" class="form-control-file" type="file" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Preco" class="col-sm-2 control-label"></label>
                            <div class="col-sm-10">


                                <input asp-for="Preco" class="form-control" />
                                <span asp-validation-for="Preco" class="text-danger"></span>
                            </div>
                        </div>
                        <table  width="60%" align="center">
                            @for (int i = 0; i < Model.ListaServicos.Count; i++)
                            {
                                <tr>
                                    <td>
                                        @Html.HiddenFor(x => Model.ListaServicos[i].Id)
                                        @Html.DisplayFor(z => Model.ListaServicos[i].Nome)
                                    </td>
                                    <td>
                                        @Html.CheckBoxFor(z => Model.ListaServicos[i].Selecionado)
                                    </td>
                                </tr>
                            }
                        </table>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">

                                <input asp-for="Imagem" type="hidden" />
                                <input type="submit" value="Guardar" class="btn btn-success" />
                                <a class="btn btn-danger" asp-action="Index">Cancelar</a>
                            </div>
                        </div>
                    </form>

                </section>
            </div>
        </div>
    </section>
</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
