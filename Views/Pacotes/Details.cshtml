@model Projeto_Lab_Web_Grupo3.Models.Pacotes

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Details";
}



<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h3>Detalhes deste Pacote</h3>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Nome)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Nome)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Descricao)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Descricao)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Preco)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Preco)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ServicosPacotes)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ServicosPacotes)
                        </dd>
                    </dl>
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.PacoteId">Editar</a> |
                    <a asp-action="Index">Voltar Atrás</a>
                </div>
            </div>


        </section>
    </section>
</section>
