@model ServicosPacotesViewModel

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Details";
}


<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h3>Detalhes deste Pacote</h3>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Pacotes.Nome)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Pacotes.Nome)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Pacotes.Descricao)
                        </dt>
                        <dd class="col-sm-10">
                            @if (Html.DisplayFor(model => model.Pacotes.Descricao) == null)
                            {
                            <p></p>
                            }
                            else
                            {
                                @Html.DisplayFor(model => model.Pacotes.Descricao)
                            }

                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Pacotes.Preco)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Pacotes.Preco)
                        </dd>




                        @*<dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Pacotes.ServicosPacotes)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Pacotes.ServicosPacotes)
                            </dd>*@
                    </dl>
                </div>
                @if (Model.ServicosPacotes.Count() == 0)
                {
                    <p>Nao existem Serviços para mostrar.</p>
                }
                else
                {

            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ServicosPacotes[0].Servico.Nome)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ServicosPacotes[0].Servico.Descricao)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ServicosPacotes[0].Servico.TipoServicos.Nome)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ServicosPacotes)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Servico.Nome)
                            </td>
                            @*<td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.Servico.TipoServicos.Nome)
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.ServicoId"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.ServicoId"><i class="fa fa-info-circle" aria-hidden="true"></i></a>
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ServicoId"><i class="icon_close_alt2"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
                }
                @if (Model.PromocoesPacotes.Count == 0)
                {
                    <p>Não existem promoções para mostrar.</p>
                }
                else
                {
                    <table class="table table-borderless">
                        <thead>
                            <tr>
                                <th>

                                    @Html.DisplayNameFor(model => model.PromocoesPacotes[0].Promocoes)
                                </th>



                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model.PromocoesPacotes)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Promocoes.Nome)
                                    </td>


                                </tr>
                            }
                        </tbody>
                    </table>
                }
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Pacotes.PacoteId">Editar</a> |
                    <a asp-action="Index">Voltar Atrás</a>
                </div>


            </div>
        </section>
    </section>
</section>
