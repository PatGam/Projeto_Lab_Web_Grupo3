@model ServicosPacotesViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header"><i class="icon_cart"></i>Pacotes</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Criar novo Pacote
                    </header>
                    <div class="panel-body">
                        <form asp-action="Create" class="form-horizontal " method="get">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Pacotes.Nome" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="Pacotes.Nome" class="form-control" />
                                    <span asp-validation-for="Pacotes.Nome" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="form-group">
                                <label for="exampleFormControlTextarea1" class="col-sm-2 control-label" asp-for="Pacotes.Descricao"></label>
                                <div class="col-sm-10">
                                    <textarea type="text" id="exampleFormControlTextarea1" rows="3" asp-for="Pacotes.Descricao" class="form-control"></textarea>
                                    <span asp-validation-for="Pacotes.Descricao" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Pacotes.Preco" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="Pacotes.Preco" class="form-control" />
                                    <span asp-validation-for="Pacotes.Preco" class="text-danger"></span>
                                </div>
                            </div>

                            <table>
                            @for (int x = 0; x < 5; x++)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(z => Model.ListaServicos[x].NomeTipoServico)
                                    </td>
                                    @for (int i = 0; i < Model.ListaServicos.Capacity; i++)
                                    {

                                        if (Model.ListaServicos[i].TipoServico == Model.ListaServicos[x].TipoServico)
                                        {

                                            <td>
                                                @Html.HiddenFor(x => Model.ListaServicos[i].Id)
                                                @Html.DisplayFor(z => Model.ListaServicos[i].Nome)
                                            </td>
                                            <td>
                                                @Html.CheckBoxFor(z => Model.ListaServicos[i].Selecionado)
                                            </td>
                                        }

                                    }
                                    </tr>
                                }
                                </table>
                                    <div class="form-group">
                                        <div class="col-lg-offset-2 col-lg-10">
                                            <input type="submit" value="Criar novo pacote" class="btn btn-success" />
                                            <a class="btn btn-danger" asp-action="Index">Volta à lista</a>
                                        </div>
                                    </div>
                                </form>

                    </div>
                </section>
            </div>
        </div>
    </section>
</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
