                        <section class="panel">
                            <header class="panel-heading">
                                @ViewBag.Distrito20
                            </header>
                            <table class="table table-striped table-advance table-hover">
                                <thead>
                                    <tr>
                                        <th>
                                            Nome
                                        </th>
                                        <th>
                                            Faturação
                                        </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.clientesMadeira)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ClienteNome)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Lucro)
                                            </td>
                                            <td>
                                                <a asp-area="" asp-controller="Utilizadores" asp-action="Details" asp-route-id="@item.UtilizadorId">Detalhes |</a>
                                            </td>

                                        </tr>
                                    }

                                </tbody>
                            </table>

                        </section>
                    </div>
                </div>
            </section>
        </section>
    </section>
</body>


